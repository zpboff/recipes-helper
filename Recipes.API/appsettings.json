{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Recipes.API",
      "Environment": "Test"
    }
  },
  "AllowedHosts": "*",
  "RecipesMongoSettings": {
    "Host": "localhost:27017",
    "Database": "recipes-helper",
    "User": "root",
    "Password": "example",
    "RecipesCollectionName": "recipes"
  },
  "RecipesRabbitSettings": {
    "Host": "localhost",
    "User": "root",
    "Password": "example"
  },
  "ConnectionStrings": {
    "IdentityServerUrl": "https://localhost:7001"
  }
}
